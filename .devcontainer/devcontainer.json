{
  "name": "Vue3 Tailwind Project",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}, // 启用 Docker
    "ghcr.io/devcontainers/features/docker-compose:1": {}    // 启用 docker-compose
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "csstools.postcss"
      ]
    }
  },
  "postCreateCommand": "npm install && ./setup.sh",
  "initializeCommand": "docker-compose up -d", // 启动 docker-compose
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "onCreateCommand": "chmod +x ./setup.sh", // 确保 setup.sh 可执行
  "customCommands": [
    "docker-compose up"
  ]
}
