{
  "name": "Vue3 Tailwind Project",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "postCreateCommand": "npm install",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers-contrib/features/jdk:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers-contrib/features/maven:1": {
      "version": "3.8"
    },
    "ghcr.io/devcontainers-contrib/features/sdkman:1": {},
    "ghcr.io/devcontainers-contrib/features/docker-compose:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",        // Vue 3 支持
        "esbenp.prettier-vscode",  // Prettier 格式化
        "dbaeumer.vscode-eslint",  // ESLint
        "bradlc.vscode-tailwindcss",// 类补全
        "csstools.postcss"// post css support
      ]
    }
  },
  "onCreateCommand": "sdk install springboot"
}
